<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTimePicker?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pjv.controller.teacher.TeacherExamsController">
    <top>
        <MenuBar BorderPane.alignment="TOP_LEFT">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="homeMenuItem" mnemonicParsing="false" onAction="#toHome" text="Home" />
                        <MenuItem fx:id="subjectsMenuItem" mnemonicParsing="false" onAction="#toSubjects" text="Subjects" />
                  <MenuItem fx:id="homeMenuItem1" mnemonicParsing="false" onAction="#toHome" text="Assignments" />
                    </items>
                </Menu>
                <Menu fx:id="assignmentsMenuItem" mnemonicParsing="false" onAction="#toAssignments" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Delete" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <left>
        <VBox prefHeight="571.0" prefWidth="306.0" spacing="10.0" style="-fx-background-color: #FFEA90;" styleClass="background" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="label" prefHeight="26.0" prefWidth="185.0" text="Add New Exam" textFill="WHITE">
                    <font>
                        <Font size="20.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" left="20.0" top="30.0" />
                    </VBox.margin>
                </Label>
                <HBox prefHeight="30.0" prefWidth="241.0">
                    <children>
                        <Label text="Exam ID - " textFill="#f8f7f7">
                            <font>
                                <Font size="15.0" />
                            </font>
                        </Label>
                        <Label fx:id="examId">
                            <HBox.margin>
                                <Insets left="25.0" />
                            </HBox.margin>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets left="25.0" />
                    </VBox.margin>
                </HBox>
            <ComboBox fx:id="subjectCode" layoutX="40.0" layoutY="171.0" prefHeight="30.0" prefWidth="246.0" promptText="Subject code">
               <VBox.margin>
                  <Insets left="25.0" />
               </VBox.margin>
            </ComboBox>
                <DatePicker fx:id="date" editable="false" prefHeight="30.0" prefWidth="245.0" promptText="Date">
                    <VBox.margin>
                        <Insets left="25.0" />
                    </VBox.margin>
                </DatePicker>
            <JFXTimePicker fx:id="timePicker">
               <VBox.margin>
                  <Insets left="25.0" />
               </VBox.margin>
            </JFXTimePicker>
                <TextField fx:id="capacity" prefHeight="30.0" prefWidth="246.0" promptText="Capacity">
                    <VBox.margin>
                        <Insets left="25.0" right="25.0" />
                    </VBox.margin></TextField>
            <HBox prefHeight="18.0" prefWidth="246.0">
               <VBox.margin>
                  <Insets left="25.0" right="25.0" />
               </VBox.margin>
               <children>
                  <RadioButton fx:id="rbAvailable" mnemonicParsing="false" text="available to enroll" />
                  <RadioButton fx:id="rbNotAvailable" mnemonicParsing="false" text="not available">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </RadioButton>
               </children>
            </HBox>
                <ComboBox fx:id="classroom" layoutX="40.0" layoutY="331.0" prefHeight="30.0" prefWidth="246.0" promptText="Classroom">
                    <VBox.margin>
                        <Insets left="25.0" />
                    </VBox.margin>
                </ComboBox>
                <HBox prefHeight="30.0" prefWidth="250.0" spacing="10.0">
                    <children>
                        <Button fx:id="reset" mnemonicParsing="false" prefHeight="30.0" prefWidth="75.0" style="-fx-background-color: white;" text="Reset">
                            <effect>
                                <DropShadow blurType="ONE_PASS_BOX" color="#1965d0" />
                            </effect>
                        </Button>
                        <Button fx:id="saveExam" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#save" prefHeight="30.0" prefWidth="75.0" styleClass="btnGreen" text="Save" textFill="WHITE">
                            <font>
                                <Font size="15.0" />
                            </font>
                            <effect>
                                <DropShadow blurType="ONE_PASS_BOX" color="#6468b2" />
                            </effect>
                        </Button>
                    </children>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets left="110.0" />
                    </VBox.margin>
                </HBox>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
        </VBox>
    </left>
    <center>
        <VBox alignment="TOP_RIGHT" prefHeight="571.0" prefWidth="692.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="TOP_RIGHT" prefHeight="41.0" prefWidth="640.0">
                    <children>
                        <Button fx:id="btnLogout" mnemonicParsing="false" prefHeight="22.0" prefWidth="70.0" style="-fx-background-color: #FFEA90;" styleClass="background" text="Logout" textFill="#fff9f9" textOverrun="CLIP">
                            <font>
                                <Font size="14.0" />
                            </font>
                            <HBox.margin>
                                <Insets right="5.0" top="5.0" />
                            </HBox.margin>
                            <effect>
                                <DropShadow blurType="ONE_PASS_BOX" color="#00000091" />
                            </effect>
                        </Button>
                    </children>
                </HBox>
                <TableView fx:id="examsTable" prefHeight="300.0" prefWidth="679.0" tableMenuButtonVisible="true">
                    <columns>
                        <TableColumn fx:id="colId" maxWidth="700.0" prefWidth="20.0" text="ID" />
                        <TableColumn fx:id="colSubject" maxWidth="4000.0" prefWidth="57.834869384765625" text="Subject" />
                        <TableColumn fx:id="colDate" maxWidth="4000.0" prefWidth="96.16510009765625" text="Date" />
                        <TableColumn fx:id="colTime" maxWidth="4000.0" prefWidth="75.0" text="Time" />
                        <TableColumn fx:id="colCapacity" maxWidth="4000.0" prefWidth="60.31939697265625" text="Capacity" />
                        <TableColumn fx:id="colOccupied" maxWidth="4000.0" prefWidth="43.89654541015625" text="Occupied" />
                        <TableColumn fx:id="colClassroom" maxWidth="6000.0" prefWidth="143.103515625" text="Classroom" />
                  <TableColumn fx:id="colAvailable" maxWidth="6000.0" prefWidth="143.103515625" text="Available" />
                    </columns>
                    <VBox.margin>
                        <Insets left="10.0" right="5.0" />
                    </VBox.margin>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <contextMenu>
                        <ContextMenu>
                            <items>
                                <MenuItem fx:id="deleteExam" mnemonicParsing="false" onAction="#deleteExam" text="Delete" />
                            </items>
                        </ContextMenu>
                    </contextMenu>
                </TableView>
            </children>
        </VBox>
    </center>
</BorderPane>
